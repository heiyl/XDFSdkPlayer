<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/xdf_video_bottom_bar_bg"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <ImageButton
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:id="@+id/pauseresumeplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_play" />

    <ImageView
        android:id="@+id/iv_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/icon_screen"/>
    <LinearLayout
        android:layout_toLeftOf="@id/iv_screen"
        android:layout_toRightOf="@id/pauseresumeplay"
        android:layout_centerVertical="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/palynowtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:text="00:00:00" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:text="/"/>

        <TextView
            android:id="@+id/palyalltime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:text="00:00:00" />
        <SeekBar
            android:id="@+id/seekbarpalyviedo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:progress="0" />
    </LinearLayout>

</RelativeLayout>